package interviewProgram;

public class TwoDimensional_singleDimensional {

	public static void main(String[] args) 
	{
		 int a[][]= {{1,3},{4,5},{6,7}};
		 int sum =0;
		 int b[]= new int [a.length];
		 
		 for(int i=0; i<a.length; i++)
		 {
			 for(int j=0; j<a[i].length; j++)
			 {
				 sum=sum+a[i][j];
				 b[i]=sum;
				 
			  }
			 sum =0;
		 }
		 for(int c:b)
		 {
			 System.out.println(c);   
		 }
		 

	}

}
